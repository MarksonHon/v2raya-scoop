    },
    "depends": "v2ray",
    "url": [
        "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/202210182215/geoip.dat",
        "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/202210182215/geosite.dat"
