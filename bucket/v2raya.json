{
    "version": "2.0.0",
    "description": "v2rayA. A web GUI client of Project V which supports V2Ray, Xray, SS, SSR, Trojan and Pingtunnel.",
    "homepage": "https://github.com/v2rayA/v2raya",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/v2rayA/v2rayA/raw/master/LICENSE"
    },
    "depends": "v2ray",
    "suggest": {
        "v2ray-rules-dat": "v2raya/v2ray-rules-dat"
    },
    "notes": "Start v2rayA with Windows by running: 'reg import \"$dir\\add-startup.reg\"'.",
    "architecture": {
        "64bit": {
            "url": "https://github.com/v2rayA/v2rayA/releases/download/v2.0.0/v2raya_windows_x64_2.0.0.exe#/v2rayaWin.exe",
            "hash": "216f668eaa69fdf74c7bef586c74c77a7931283ab189e38cd27737cbd96d188e"
        },
        "arm64": {
            "url": "https://github.com/v2rayA/v2rayA/releases/download/v2.0.0/v2raya_windows_arm64_2.0.0.exe#/v2rayaWin.exe",
            "hash": "10f9b7f9de65aeaa363f9c3d28cff9084ead89ea5947c956550bd1d54233db2e"
        }
    },
    "pre_install": [
        "if (Test-Path \"$env:UserProfile\\.config\\v2raya\") {",
        "    info '[Persistent data]: Copying user data...'",
        "    ensure \"$persist_dir\" | Out-Null",
        "    Copy-Item \"$env:UserProfile\\.config\\v2raya\\*\" \"$persist_dir\\\" -ErrorAction SilentlyContinue -Recurse -Force",
        "    Remove-Item \"$env:UserProfile\\.config\\v2raya\" -ErrorAction SilentlyContinue -Recurse -Force",
        "}",
        "ensure \"$persist_dir\" | Out-Null",
        "New-Item \"$env:UserProfile\\.config\\v2raya\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
    ],
    "post_install": [
        "@('start-v2raya', 'stop-v2raya', 'reset-passwd-v2raya') | ForEach-Object {",
        "    Copy-Item \"$bucketsdir\\v2raya\\scripts\\v2raya\\$_.ps1\" \"$dir\\$_.ps1\"",
        "}",
        "$exepath = \"powershell -NoLogo -NoProfile -ExecutionPolicy -File $bucketsdir\\v2raya\\scripts\\v2raya\\start-v2raya.ps1\".Replace('\\', '\\\\')",
        "@('add-startup', 'remove-startup') | ForEach-Object {",
        "    $content = Get-Content \"$bucketsdir\\v2raya\\scripts\\v2raya\\$_.reg\"",
        "    $content = $content.Replace('$exepath', $exepath)",
        "    if ($global) {",
        "       $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    $content | Set-Content -Path \"$dir\\$_.reg\" -Encoding Ascii",
        "}"
    ],
    "pre_uninstall": [
        "stop-v2raya",
        "Remove-Item \"$env:UserProfile\\.config\\v2raya\" -ErrorAction 'SilentlyContinue' -Force -Recurse"
    ],
    "uninstaller": {
        "script": "if ($cmd -eq 'uninstall') { reg import \"$dir\\remove-startup.reg\" }"
    },
    "bin": [
        [
            "v2rayaWin.exe",
            "v2raya",
            "--lite"
        ],
        [
            "v2rayaWin.exe",
            "v2rayaWin"
        ],
        "start-v2raya.ps1",
        "stop-v2raya.ps1",
        "reset-passwd-v2raya.ps1"
    ],
    "env_set": {
        "V2RAYA_V2RAY_BIN": "$(scoop prefix v2ray)\\v2ray.exe"
    },
    "checkver": {
        "url": "https://api.github.com/repos/v2rayA/v2raya/releases/latest",
        "regex": "v2raya_windows_x64_([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/v2rayA/v2rayA/releases/download/v$version/v2raya_windows_x64_$version.exe#/v2rayaWin.exe"
            },
            "arm64": {
                "url": "https://github.com/v2rayA/v2rayA/releases/download/v$version/v2raya_windows_arm64_$version.exe#/v2rayaWin.exe"
            }
        }
    }
}
